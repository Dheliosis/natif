<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.dataStorage.DataStorageFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a string" />

    <EditText
        android:id="@+id/editTextInt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter an integer"
        android:inputType="number"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter strings separated by commas" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Data" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Data will appear here"
        android:textSize="18sp" />

</LinearLayout>
