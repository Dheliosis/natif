<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.camera.CameraFragment">

    <androidx.camera.view.PreviewView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/previewCameraView"
        />

    <ImageButton
        android:id="@+id/captureB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_camera_alt_24"
        android:scaleType="centerCrop"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/flachToggleB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_flash_off_24"
        android:scaleType="centerCrop"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/flipCameraB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/flachToggleB"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_flip_camera_android_24"
        android:scaleType="centerCrop"
        app:tint="@color/white" />


</RelativeLayout>